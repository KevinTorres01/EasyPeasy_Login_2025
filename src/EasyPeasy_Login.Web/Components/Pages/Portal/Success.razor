@page "/portal/success"
@rendermode InteractiveServer

<PageTitle>Success!</PageTitle>

<div class="success-page">
    <div class="success-card">
        <div class="success-icon">âœ…</div>
        <h1>Welcome!</h1>
        <p>You are now connected to the internet</p>
        
        <div class="connection-info">
            <p><strong>Session ID:</strong> @sessionId</p>
            <p><strong>Valid until:</strong> @expiresAt</p>
        </div>

        <button class="btn-continue" @onclick="Continue">
            Continue browsing
        </button>
    </div>
</div>

<style>
.success-page {
    min-height: 100vh;
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1rem;
}

.success-card {
    background: white;
    border-radius: 24px;
    padding: 3rem;
    text-align: center;
    max-width: 500px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
}

.success-icon {
    font-size: 4rem;
    margin-bottom: 1rem;
}

.success-card h1 {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
}

.success-card p {
    color: #6b7280;
    margin-bottom: 2rem;
}

.connection-info {
    background: #f9fafb;
    border-radius: 12px;
    padding: 1.5rem;
    margin-bottom: 2rem;
    text-align: left;
}

.connection-info p {
    margin: 0.5rem 0;
    color: #374151;
}

.btn-continue {
    padding: 0.875rem 2rem;
    background: #000;
    color: white;
    border: none;
    border-radius: 8px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
}

.btn-continue:hover {
    background: #1a1a1a;
    transform: translateY(-2px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
}
</style>

@code {
    private string sessionId = Guid.NewGuid().ToString("N").Substring(0, 8);
    private string expiresAt = DateTime.Now.AddHours(1).ToString("HH:mm");

    private void Continue()
    {
        // Redirect to any URL
        NavigationManager.NavigateTo("https://www.google.com", true);
    }

    [Inject]
    private NavigationManager NavigationManager { get; set; } = default!;
}